@model AdminTools.Data.Models.Asset
@{
    ViewData["Title"] = Model.AssetTag;
    ViewData["Header"] = "Asset Detail";
    ViewData["Description"] = "";
}

<div class="row">
    <div class="card col-md-8 col-sm-10 offset-md-2 offset-sm-1">
        <div class="card-header">
            <h4>@Model.AssetTag</h4>
        </div>
        <div class="card-block">
            <form>
                <fieldset disabled>
                    <div class="form-group row">
                        <label class="form-control-label col-md-3 col-sm-4" asp-for="Name"></label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Name" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="form-text col-md-3 col-sm-4" asp-for="BuinessUnit"></label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="BuinessUnit" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="form-text col-md-3 col-sm-4" asp-for="Location"></label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Location" />
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>